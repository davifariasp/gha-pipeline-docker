{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "./src/",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./public/",
    "esModuleInterop": true,
    "typeRoots": [
      "@types",
      "node_modules/@types",
    ],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "tests"
  ],
  "ts-node": {"transpileOnly": true}
}
